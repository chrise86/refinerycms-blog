<% content_for :subnav do %>
  <%= render '/refinery/blog/admin/submenu' %>
<% end %>

<%= render "/refinery/admin/search", url: request.path, placeholder: t('search', scope: 'refinery.admin.blog.comments') %>

<%= render 'refinery/admin/search_header', url: request.path %>

<% if @comments.any? %>
  <%= will_paginate @comments %>

  <%= render "sortable_list" %>

  <%= will_paginate @comments %>
<% else %>
  <% if searching? %>
    <%= t('no_results', :scope => 'refinery.admin.search') %>
  <% else %>
    <p>
      <strong>
        <%= t('.no_items_yet', :type => action_name.gsub('index', 'new').downcase) %>
      </strong>
    </p>
  <% end %>
<% end %>