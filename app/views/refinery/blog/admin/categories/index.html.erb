<%= render "/refinery/admin/search", url: request.path, placeholder: t('search', scope: 'refinery.admin.blog.categories') %>

<%= render 'refinery/admin/search_header', url: request.path %>

<% if @categories.any? %>
  <%= will_paginate @categories %>

  <%= render "sortable_list" %>

  <%= will_paginate @categories %>
<% else %>
